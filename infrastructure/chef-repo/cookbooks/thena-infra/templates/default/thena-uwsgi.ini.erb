[uwsgi]
chdir = <%= node['thena-infra']['app_dir'] %>
module = <%= node['thena-infra']['uwsgi_module'] %>

master = true
processes = 5

socket = <%= node['thena-infra']['uwsgi_socket'] %>
chmod-socket = 664
vacuum = true

uid = <%= node['thena-infra']['uwsgi_user'] %>
gid = <%= node['thena-infra']['uwsgi_group'] %>

pidfile = <%= node['thena-infra']['uwsgi_pidfile'] %>
logto = <%= node['thena-infra']['uwsgi_logfile'] %>

die-on-term = true